<%= form_for(@friend) do |f| %>
  <% if @friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
      <% @friend.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :sex %><br />
    <%= f.radio_button(:sex, "f") %>female
    <%= f.radio_button(:sex, "m") %>male
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :class=>'rf_text inputbox' %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, :class=>'rf_text inputbox' %>
  </div>
  <div class="field">
    <%= f.label :memo %><br />
    <%= f.text_area :memo, :rows=>5, :class=>'inputbox' %>
  </div>
  <div class="field">
    <%= f.label :group_id %><br />
    <%= f.collection_select(:group_id,Group.find(:all), :id, :name, :prompt=>true) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
