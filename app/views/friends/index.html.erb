<h1>Listing friends</h1>

<table class="list">
  <tr>
    <th>Group</th>
    <th>Name</th>
    <th>Email</th>
    <th>Memo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @friends.each do |friend| %>
  <tr>
    <td><%= friend.group.name %></td>
    <td><%= friend.name %></td>
    <td><%= friend.email %></td>
    <td><%= friend.memo %></td>
    <td><%= link_to 'Show', friend %></td>
    <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
    <td><%= link_to 'Destroy', friend, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

